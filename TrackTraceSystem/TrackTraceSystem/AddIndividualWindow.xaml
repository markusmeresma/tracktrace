<Window x:Class="TrackTraceSystem.AddIndividualWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackTraceSystem"
        mc:Ignorable="d"
        Title="AddIndividualWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblPhoneNr" Content="Insert UK phone number for an individual" HorizontalAlignment="Left" Margin="21,59,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtPhoneNr" HorizontalAlignment="Left" Height="22" Margin="312,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="btnSaveIndividual" Content="Save" HorizontalAlignment="Left" Margin="680,67,0,0" VerticalAlignment="Top" Width="75" Click="btnSaveIndividual_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,22,0,0" TextWrapping="Wrap" Text="Add a new individual" VerticalAlignment="Top" Width="167" FontSize="16" FontWeight="Bold"/>
        <ListBox x:Name="ListBox" HorizontalAlignment="Left" Height="191" Margin="21,194,0,0" VerticalAlignment="Top" Width="338"/>
        <TextBlock HorizontalAlignment="Left" Margin="22,155,0,0" TextWrapping="Wrap" Text="List of saved individuals (IDs):" VerticalAlignment="Top" Height="23" Width="355" FontSize="14"/>

    </Grid>
</Window>
